{
    "python.venvPath": "${workspaceFolder}/venv",
    "python.venvArgs": ["-m", "venv"],
    "python.pythonPath": "${workspaceFolder}/venv/Scripts/python.exe",
     "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "python.venvActivation": [
        "C:\\Windows\\System32\\cmd.exe /k \"${workspaceFolder}/venv/Scripts/activate\"",
        // "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe -Command \"${workspaceFolder}/venv/Scripts/Activate.ps1\"",
        // "C:\\Program Files\\Git\\bin\\bash.exe -c \"source ${workspaceFolder}/venv/Scripts/activate\""
    ],
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "/k",
        "${workspaceFolder}/venv/Scripts/activate"
    ],
    "terminal.integrated.shellArgs.windows.powershell": [
        "-Command",
        "${workspaceFolder}/venv/Scripts/Activate.ps1"
    ],
    "terminal.integrated.shellArgs.windows.gitbash": [
        "-c",
        "source ${workspaceFolder}/venv/Scripts/activate"
